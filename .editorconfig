root = true

# Rules for source code.
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Rules for tool configuration.
[{package.json, *.yml, *.yaml}]
indent_size = 2

# Rules for markdown documents.
[*.md]
trim_trailing_whitespace = false